*, *:before, *:after 
  box-sizing border-box

body 
  margin 0
  padding 0
  font-family  hack, monospace, Helvetica
  color #fff
  background: #252525;
  font-size 14px
  


.main 
  //max-width: 500px;
  
a 
  color: #84C2FF;
  text-decoration: none;


a:hover 
  text-decoration: underline;

  

.header 
  background: #F2543D;
  display inline-block

.header h1 {
  line-height: 56px;
  font-size: 51px;
  padding 0 
  margin 5px 10px
}



.boxes {
  display:table;
  width: 100%;
  height: 100%;
  table-layout: fixed;
}

.box {
  display: table-cell;
  text-align: left;
  vertical-align:top;
  padding 0 10px
}


@media (max-width: 420px) {
    .box {
        display: block;
        width: 100%;
    }
}
